{
  "name": "PHP & MySQL Demo Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app", // This is the main service Codespaces will connect to (our PHP app)
  "workspaceFolder": "/pet-adoption",

  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client", // PHP IntelliSense
        "xdebug.php-debug",                   // PHP Debugging
        "ms-azuretools.vscode-docker",        // Docker management
        "cweijan.vscode-mysql-client2"        // MySQL GUI Client (optional)
      ]
    }
  },

  "forwardPorts": [
    8000, // For our PHP application
    3306, // For MySQL (can be useful for local tools if needed, but mostly for app-to-db)
    8081  // For phpMyAdmin
  ],

  // Commands to run after the Codespace is created and your code is cloned
  "postCreateCommand": "sudo service mysql start && cd backend && composer install && cd ..",

  // Run as the default vscode user
  "remoteUser": "vscode"
}
